---
import BaseLayout from '../layouts/BaseLayout.astro';
import { siteConfig } from '../config/site';

const pageTitle = `Página no encontrada | ${siteConfig.name}`;
---

<BaseLayout title={pageTitle}>
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4">
    <h1 class="font-sans font-extrabold text-6xl md:text-8xl text-gray-900 dark:text-white mb-4">
      404
    </h1>

    <h2 class="font-sans font-bold text-2xl md:text-3xl text-gray-700 dark:text-gray-300 mb-6">
      Página no encontrada
    </h2>

    <p class="font-sans text-lg text-gray-600 dark:text-gray-400 mb-8 max-w-md">
      Lo siento, la página que buscas no existe o ha sido movida.
    </p>

    <div class="flex gap-4 flex-wrap justify-center">
      <a
        href="/"
        class="inline-block px-6 py-3 bg-brand-600 hover:bg-brand-700 text-white font-sans font-semibold rounded-lg transition-colors"
      >
        Volver al inicio
      </a>

      <a
        href="/blog"
        class="inline-block px-6 py-3 border-2 border-brand-600 text-brand-600 dark:text-brand-400 dark:border-brand-400 hover:bg-brand-50 dark:hover:bg-brand-900/20 font-sans font-semibold rounded-lg transition-colors"
      >
        Ver el blog
      </a>
    </div>
  </div>
</BaseLayout>
