---
interface Props {
  tag: string;
  size?: 'sm' | 'md';
  variant?: 'default' | 'interactive';
}

const { tag, size = 'sm', variant = 'interactive' } = Astro.props;

const sizeClasses = {
  sm: 'px-2 py-1 text-xs',
  md: 'px-3 py-1 text-xs'
};

const variantClasses = variant === 'interactive'
  ? 'hover:bg-gray-300 dark:hover:bg-gray-600'
  : '';
---

<a
  data-testid={`tag-${tag}`}
  href={`/tags/${tag}`}
  class={`bg-gray-200 dark:bg-gray-700 rounded-full font-semibold text-gray-700 dark:text-gray-300 ${sizeClasses[size]} ${variantClasses}`}
>
  #{tag}
</a>
