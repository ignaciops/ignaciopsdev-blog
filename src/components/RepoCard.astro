---
interface Props {
  title: string;
  description: string;
  tags: string[];
  repoUrl: string;
}

const { title, description, tags, repoUrl } = Astro.props;
---

<a data-testid="repo-card" href={repoUrl} target="_blank" rel="noopener noreferrer" class="group block p-6 bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm hover:shadow-md hover:border-brand-600 dark:hover:border-brand-400 transition-all duration-200">
  <div class="flex justify-between items-start">
    <div class="flex items-center gap-2">
      <!-- Icono de carpeta o repo -->
      <svg class="w-5 h-5 text-gray-400 group-hover:text-brand-600 dark:group-hover:text-brand-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
      </svg>
      <h3 data-testid="repo-card-title" class="font-sans font-bold text-lg text-gray-900 dark:text-gray-100 group-hover:text-brand-600 dark:group-hover:text-brand-400">
        {title}
      </h3>
    </div>
    <!-- Arrow icon -->
    <svg class="w-4 h-4 text-gray-300 group-hover:text-brand-600 transform group-hover:translate-x-1 transition-all" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
    </svg>
  </div>

  <p data-testid="repo-card-description" class="mt-3 font-serif text-gray-600 dark:text-gray-400 leading-relaxed text-sm">
    {description}
  </p>

  <div data-testid="repo-card-tags" class="mt-4 flex flex-wrap gap-2">
    {tags.map((tag) => (
      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium font-mono bg-gray-100 dark:bg-gray-800 text-gray-800 dark:text-gray-300">
        {tag}
      </span>
    ))}
  </div>
</a>