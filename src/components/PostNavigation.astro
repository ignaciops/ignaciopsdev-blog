---
interface Post {
  slug: string;
  data: {
    title: string;
    date: Date;
  };
}

interface Props {
  prev?: Post | null;
  next?: Post | null;
}

const { prev, next } = Astro.props;
---

{(prev || next) && (
  <nav data-testid="post-navigation" class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-800">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {prev && (
        <a data-testid="previous-post-link" href={`/blog/${prev.slug}`} class="group block p-6 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-brand-600 dark:hover:border-brand-400 transition-all">
          <div class="text-sm font-sans uppercase tracking-wider text-gray-500 mb-2">
            ← Anterior
          </div>
          <div class="font-sans font-bold text-lg text-gray-900 dark:text-gray-100 group-hover:text-brand-600 dark:group-hover:text-brand-400">
            {prev.data.title}
          </div>
        </a>
      )}

      {next && (
        <a data-testid="next-post-link" href={`/blog/${next.slug}`} class={`group block p-6 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-brand-600 dark:hover:border-brand-400 transition-all ${!prev ? 'md:col-start-2' : ''}`}>
          <div class="text-sm font-sans uppercase tracking-wider text-gray-500 mb-2 text-right">
            Siguiente →
          </div>
          <div class="font-sans font-bold text-lg text-gray-900 dark:text-gray-100 group-hover:text-brand-600 dark:group-hover:text-brand-400 text-right">
            {next.data.title}
          </div>
        </a>
      )}
    </div>
  </nav>
)}
