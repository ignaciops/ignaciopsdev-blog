---
import { siteConfig } from '../config/site';

interface Props {
  floating?: boolean;
}

const { floating = false } = Astro.props;

const navItems = [
  { href: '/blog', label: 'Blog' },
  { href: '/portfolio', label: 'Proyectos' },
  { href: '/about', label: 'Acerca' },
];

// Get current path to determine active page
const currentPath = Astro.url.pathname;

const isActive = (href: string) => {
  // Exact match for home
  if (href === '/' && currentPath === '/') return true;
  // Starts with for other pages (handles /blog/post-slug)
  if (href !== '/' && currentPath.startsWith(href)) return true;
  return false;
};
---

<header data-testid="site-header" class={`w-full py-4 md:py-6 transition-colors duration-300 relative z-50 ${
  floating
    ? 'absolute top-0 left-0 right-0 bg-transparent'
    : 'bg-white dark:bg-dark border-b border-gray-100 dark:border-gray-800'
}`}>
  <div class="max-w-5xl mx-auto px-4 flex justify-between items-center">
    <a data-testid="site-logo" href="/" class={`font-sans font-bold text-xl tracking-tight hover:text-brand-600 dark:hover:text-brand-400 ${
      floating ? 'text-white' : ''
    }`}>
      {siteConfig.name}
    </a>

    <!-- Desktop Navigation -->
    <nav data-testid="main-navigation" class="hidden md:flex items-center gap-6">
      {navItems.map(item => (
        <a
          data-testid={`nav-link-${item.href.replace('/', '')}`}
          href={item.href}
          class={`font-sans text-xl hover:text-brand-600 dark:hover:text-brand-400 transition-colors ${
            isActive(item.href)
              ? 'text-brand-600 dark:text-brand-400 font-bold'
              : floating
                ? 'text-white'
                : 'text-gray-700 dark:text-gray-300'
          }`}
        >
          {item.label}
        </a>
      ))}

      <!-- Theme Toggle (Desktop) -->
      <button data-testid="theme-toggle-button" id="theme-toggle" class="p-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800" aria-label="Cambiar tema">
        <svg class="w-5 h-5 hidden dark:block text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
        <svg class="w-5 h-5 block dark:hidden text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>
      </button>
    </nav>

    <!-- Mobile Controls -->
    <div class="flex md:hidden items-center gap-2">
      <!-- Theme Toggle (Mobile) -->
      <button data-testid="theme-toggle-mobile" id="theme-toggle-mobile" class={`p-2 rounded-md ${floating ? 'hover:bg-white/10' : 'hover:bg-gray-100 dark:hover:bg-gray-800'}`} aria-label="Cambiar tema">
        <svg class={`w-5 h-5 hidden dark:block ${floating ? 'text-yellow-300' : 'text-yellow-400'}`} fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
        <svg class={`w-5 h-5 block dark:hidden ${floating ? 'text-white' : 'text-gray-600'}`} fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>
      </button>

      <!-- Hamburger Button -->
      <button
        data-testid="mobile-menu-toggle"
        id="mobile-menu-toggle"
        class={`p-2 rounded-md ${floating ? 'text-white hover:bg-white/10' : 'text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800'}`}
        aria-label="Abrir menu"
        aria-expanded="false"
      >
        <svg id="menu-icon-open" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <svg id="menu-icon-close" class="w-6 h-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu Dropdown -->
  <nav
    data-testid="mobile-menu"
    id="mobile-menu"
    class={`hidden md:hidden absolute left-0 right-0 top-full px-4 py-4 shadow-lg ${
      floating
        ? 'bg-gray-900/95 backdrop-blur-sm'
        : 'bg-white dark:bg-dark border-b border-gray-100 dark:border-gray-800'
    }`}
  >
    <div class="flex flex-col gap-4">
      {navItems.map(item => (
        <a
          data-testid={`mobile-nav-link-${item.href.replace('/', '')}`}
          href={item.href}
          class={`font-sans text-lg py-2 transition-colors ${
            isActive(item.href)
              ? 'text-brand-600 dark:text-brand-400 font-bold'
              : floating
                ? 'text-white hover:text-brand-400'
                : 'text-gray-700 dark:text-gray-300 hover:text-brand-600 dark:hover:text-brand-400'
          }`}
        >
          {item.label}
        </a>
      ))}
    </div>
  </nav>
</header>

<script>
  function initHeader() {
    const mobileMenuToggle = document.getElementById("mobile-menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuIconOpen = document.getElementById("menu-icon-open");
    const menuIconClose = document.getElementById("menu-icon-close");
    const themeToggles = document.querySelectorAll("[id^='theme-toggle']");

    // Evitar inicialización duplicada en el mismo elemento
    if (mobileMenuToggle?.dataset.initialized === "true") return;
    if (mobileMenuToggle) mobileMenuToggle.dataset.initialized = "true";

    const toggleMenu = () => {
      const isExpanded = mobileMenuToggle?.getAttribute("aria-expanded") === "true";
      mobileMenuToggle?.setAttribute("aria-expanded", (!isExpanded).toString());
      mobileMenu?.classList.toggle("hidden");
      menuIconOpen?.classList.toggle("hidden");
      menuIconClose?.classList.toggle("hidden");
    };

    const closeMenu = () => {
      mobileMenu?.classList.add("hidden");
      menuIconOpen?.classList.remove("hidden");
      menuIconClose?.classList.add("hidden");
      mobileMenuToggle?.setAttribute("aria-expanded", "false");
    };

    // Listener para el botón hamburguesa
    mobileMenuToggle?.addEventListener("click", (e) => {
      e.stopPropagation();
      toggleMenu();
    });

    // Theme Toggles
    themeToggles.forEach(btn => {
      if (btn.dataset.themeInitialized === "true") return;
      btn.dataset.themeInitialized = "true";
      btn.addEventListener("click", () => {
        document.documentElement.classList.toggle("dark");
        const isDark = document.documentElement.classList.contains("dark");
        localStorage.setItem("theme", isDark ? "dark" : "light");
      });
    });

    // Cerrar al hacer clic fuera (usar una función nombrada para evitar duplicados)
    const handleClickOutside = (e: MouseEvent) => {
      if (!mobileMenu?.contains(e.target as Node) && !mobileMenuToggle?.contains(e.target as Node)) {
        closeMenu();
      }
    };

    // Remover listener anterior si existe y añadir nuevo
    document.removeEventListener("click", (window as any).__headerClickOutside);
    (window as any).__headerClickOutside = handleClickOutside;
    document.addEventListener("click", handleClickOutside);

    // Cerrar antes de cambiar de página
    document.addEventListener("astro:before-preparation", closeMenu, { once: true });
  }

  // astro:page-load se dispara tanto en carga inicial como en navegaciones con View Transitions
  document.addEventListener("astro:page-load", initHeader);
</script>