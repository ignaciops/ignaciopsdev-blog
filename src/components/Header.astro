---
import { siteConfig } from '../config/site';

interface Props {
  floating?: boolean;
}

const { floating = false } = Astro.props;

const navItems = [
  { href: '/blog', label: 'Blog' },
  { href: '/portfolio', label: 'Proyectos' },
  { href: '/about', label: 'Acerca' },
];

// Get current path to determine active page
const currentPath = Astro.url.pathname;

const isActive = (href: string) => {
  // Exact match for home
  if (href === '/' && currentPath === '/') return true;
  // Starts with for other pages (handles /blog/post-slug)
  if (href !== '/' && currentPath.startsWith(href)) return true;
  return false;
};
---

<header data-testid="site-header" class={`w-full py-6 transition-colors duration-300 ${
  floating
    ? 'absolute top-0 left-0 right-0 z-50 bg-transparent'
    : 'bg-white dark:bg-dark border-b border-gray-100 dark:border-gray-800'
}`}>
  <div class="max-w-5xl mx-auto px-4 flex justify-between items-center">
    <a data-testid="site-logo" href="/" class={`font-sans font-bold text-xl tracking-tight hover:text-brand-600 dark:hover:text-brand-400 ${
      floating ? 'text-white' : ''
    }`}>
      {siteConfig.name}
    </a>

    <nav data-testid="main-navigation" class="flex items-center gap-6">
      {navItems.map(item => (
        <a
          data-testid={`nav-link-${item.href.replace('/', '')}`}
          href={item.href}
          class={`font-sans text-xl hover:text-brand-600 dark:hover:text-brand-400 transition-colors ${
            isActive(item.href)
              ? 'text-brand-600 dark:text-brand-400 font-bold'
              : floating
                ? 'text-white'
                : 'text-gray-700 dark:text-gray-300'
          }`}
        >
          {item.label}
        </a>
      ))}

      <!-- Toggle Mode Button (script inline abajo) -->
      <button data-testid="theme-toggle-button" id="theme-toggle" class="p-2 rounded-md hover:bg-gray-100 dark:hover:bg-gray-800" aria-label="Cambiar tema">
        <!-- Icono Sol (Simple SVG) -->
        <svg class="w-5 h-5 hidden dark:block text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" /></svg>
        <!-- Icono Luna -->
        <svg class="w-5 h-5 block dark:hidden text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" /></svg>
      </button>
    </nav>
  </div>
</header>
<script>
    // Lógica del botón. Se ejecuta en el cliente.
    const handleToggleClick = () => {
        const element = document.documentElement;
        element.classList.toggle("dark");

        const isDark = element.classList.contains("dark");
        localStorage.setItem("theme", isDark ? "dark" : "light");
    };

    const themeToggle = document.getElementById("theme-toggle");
    if (themeToggle) {
        themeToggle.addEventListener("click", handleToggleClick);
    }
</script>
